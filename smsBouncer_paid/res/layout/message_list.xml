<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/month_view_today_background">
	<ListView android:id="@android:id/list" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:background="#00000000" android:cacheColorHint="#00000000"
		android:focusableInTouchMode="true"/>

	<RelativeLayout android:id="@android:id/empty"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TextView android:id="@+id/empty_text" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/blocked_list_is_empty"
			android:layout_centerHorizontal="true" android:layout_marginTop="10dp"
			android:textStyle="bold" android:textSize="20sp" />

	</RelativeLayout>

</LinearLayout>