
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/month_view_today_background">
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:padding="5dp">

		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_below="@+id/button1" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">

			<TextView android:text="TextView" android:id="@+id/from"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="22sp" android:textStyle="bold" android:ellipsize="end">
			</TextView>
			<TextView android:text="TextView" android:id="@+id/time"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="15sp" android:textStyle="bold"
				android:layout_marginTop="10dp"></TextView>

		</LinearLayout>

		<TextView android:text="TextView" android:id="@+id/bodySnipet"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:textSize="17sp" android:layout_below="@id/linearLayout1"
			android:layout_marginTop="20dp"></TextView>

		<Button android:layout_height="wrap_content" android:id="@+id/button1"
			android:text="@string/add_sender_to_blacklist" android:layout_width="fill_parent"
			android:layout_alignParentTop="true" android:layout_alignLeft="@+id/linearLayout1"
			android:background="@drawable/red_button_selector"></Button>

		<!-- <Button android:layout_height="wrap_content" android:id="@+id/button2" 
			android:text="Add Sender To Blacklist" android:layout_width="wrap_content" 
			android:layout_below="@+id/bodySnipet" android:layout_alignLeft="@+id/linearLayout1"></Button> -->
	</RelativeLayout>
</ScrollView>