<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:gravity="center_vertical" android:paddingTop="7dp" android:paddingBottom="7dp" >

	<FrameLayout android:layout_height="fill_parent"
		android:layout_width="0dp" android:layout_weight="3" android:gravity="center_vertical"
		android:padding="3dp">

		<TextView android:text="TextView" android:id="@+id/number"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginLeft="10dp" android:ellipsize="end"
			android:textSize="18sp" android:textColor="#FFFFFF"></TextView>

	</FrameLayout>

	<FrameLayout android:layout_height="fill_parent"
		android:layout_width="0dp" android:layout_weight="2" android:padding="3dp">

		<TextView android:text="TextView" android:id="@+id/blockCount"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:ellipsize="end"
			android:textSize="18sp" android:textColor="#FFFFFF"></TextView>
	</FrameLayout>


	<FrameLayout android:layout_height="fill_parent"
		android:layout_width="0dp" android:layout_weight="1" android:gravity="center_vertical"
		android:padding="3dp">

		<ImageView android:layout_height="wrap_content" android:id="@+id/blockedStatus"
			android:layout_width="wrap_content" android:src="@drawable/delete"
			android:layout_marginRight="10dp" android:layout_gravity="right|center_vertical"></ImageView>

	</FrameLayout>

</LinearLayout>
